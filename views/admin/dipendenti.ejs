<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestione Dipendenti - Admin</title>
  <link rel="stylesheet" href="/css/clean-theme.css">
</head>
<body>
  <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>
  <div class="app-container">
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <a href="/admin/dashboard" class="sidebar-logo">Gestionale Consegne</a>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/vehicles">Gestione Furgoni</a></li>
        <li><a href="/admin/dipendenti" class="active">Gestione Dipendenti</a></li>
        <li><a href="/admin/roster">Roster</a></li>
        <li><a href="/admin/assignments">Assegnamenti</a></li>
        <li>
          <a href="/admin/maintenance">
            Manutenzioni
            <% if (pendingMaintenanceCount > 0) { %>
              <span style="background: #ef4444; color: white; padding: 2px 6px; border-radius: 10px; font-size: 11px; margin-left: 8px; font-weight: 600;"><%= pendingMaintenanceCount %></span>
            <% } %>
          </a>
        </li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </aside>
    <main class="main-content">
      <div class="topbar">
        <div class="breadcrumb">
          <button class="mobile-menu-btn" onclick="toggleSidebar()">Menu</button>
          <span>Gestione Dipendenti</span>
        </div>
        <div class="topbar-right">
          <div class="user-info"><span>Admin</span></div>
        </div>
      </div>
      <div class="content-wrapper" style="padding:2rem">
        <div class="card">
          <div class="card-header" style="display:flex;justify-content:space-between;align-items:center">
            <h2 style="margin:0">Gestione Driver</h2>
            <button class="btn btn-primary" onclick="openCreateModal()">Aggiungi Driver</button>
          </div>
          <div class="card-body">
            <% if (riders && riders.length > 0) { %>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Nome Completo</th>
                      <th>Email</th>
                      <th>CF</th>
                      <th>Ruolo</th>
                      <th>Stato</th>
                      <th>Furgone Fisso</th>
                      <th>Azioni</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% riders.forEach(rider => { %>
                      <tr>
                        <td><strong><%= rider.nome %> <%= rider.cognome %></strong></td>
                        <td><%= rider.username %></td>
                        <td><%= rider.codice_fiscale %></td>
                        <td>
                          <span class="badge badge-<%= rider.role === 'admin' ? 'danger' : 'primary' %>">
                            <%= rider.role === 'admin' ? 'Admin' : 'Driver' %>
                          </span>
                        </td>
                        <td>
                          <span class="badge badge-<%= rider.is_active === 1 ? 'success' : 'secondary' %>">
                            <%= rider.is_active === 1 ? 'Attivo' : 'Non Attivo' %>
                          </span>
                        </td>
                        <td>
                          <% if (rider.fixed_vehicle_id) { 
                            const fixedVehicle = vehicles.find(v => v.id === rider.fixed_vehicle_id);
                          %>
                            <span class="badge badge-success">
                              <%= fixedVehicle ? fixedVehicle.targa : 'N/A' %>
                            </span>
                          <% } else { %>
                            <span class="badge badge-secondary">Casuale</span>
                          <% } %>
                        </td>
                        <td>
                          <button class="btn btn-sm btn-secondary" onclick="openEditModal(<%= rider.id %>)">Modifica</button>
                          <% if (rider.role !== 'admin') { %>
                            <button class="btn btn-sm btn-danger" onclick="deleteRider(<%= rider.id %>)">Elimina</button>
                          <% } %>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="empty-state">
                <p>Nessun driver trovato</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Modal Crea Driver -->
  <div id="createModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Aggiungi Nuovo Driver</h3>
        <span class="close" onclick="closeCreateModal()">&times;</span>
      </div>
      <form action="/admin/dipendenti/create" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label>Nome</label>
            <input type="text" name="nome" class="form-control" required>
          </div>
          <div class="form-group">
            <label>Cognome</label>
            <input type="text" name="cognome" class="form-control" required>
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="username" class="form-control" required placeholder="esempio@email.com">
            <small class="form-text">L'email sarà usata come username per il login</small>
          </div>
          <div class="form-group">
            <label>Codice Fiscale</label>
            <input type="text" name="codice_fiscale" class="form-control" required maxlength="16" style="text-transform:uppercase">
          </div>
          <div class="form-group">
            <label>Ruolo</label>
            <select name="role" class="form-control" required>
              <option value="rider">Driver</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <div class="form-group">
            <label>Furgone Fisso (opzionale)</label>
            <select name="fixed_vehicle_id" class="form-control">
              <option value="">Nessuno (assegnazione casuale)</option>
              <% vehicles.forEach(vehicle => { %>
                <option value="<%= vehicle.id %>"><%= vehicle.targa %> - <%= vehicle.modello %></option>
              <% }); %>
            </select>
            <small class="form-text">Se selezionato, il driver ricevera sempre questo furgone</small>
          </div>
          <div class="form-group">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
              <input type="checkbox" name="is_active" value="1" checked style="width: 18px; height: 18px;">
              <span>Attivo</span>
            </label>
            <small class="form-text">Se deselezionato, il driver non potrà accedere al sistema</small>
          </div>
          <input type="hidden" name="password" value="1234">
          <div style="padding:12px;background:#f0f9ff;border-left:4px solid #3b82f6;margin-top:16px">
            <small><strong>Password predefinita:</strong> 1234 (il driver potrà cambiarla al primo accesso)</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeCreateModal()">Annulla</button>
          <button type="submit" class="btn btn-primary">Crea Driver</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal Modifica Driver -->
  <div id="editModal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Modifica Driver</h3>
        <span class="close" onclick="closeEditModal()">&times;</span>
      </div>
      <form id="editForm" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label>Nome</label>
            <input type="text" name="nome" id="edit_nome" class="form-control" required>
          </div>
          <div class="form-group">
            <label>Cognome</label>
            <input type="text" name="cognome" id="edit_cognome" class="form-control" required>
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" name="username" id="edit_username" class="form-control" required>
            <small class="form-text">L'email è usata come username per il login</small>
          </div>
          <div class="form-group">
            <label>Codice Fiscale</label>
            <input type="text" name="codice_fiscale" id="edit_codice_fiscale" class="form-control" required maxlength="16" style="text-transform:uppercase">
          </div>
          <div class="form-group">
            <label>Ruolo</label>
            <select name="role" id="edit_role" class="form-control" required>
              <option value="rider">Driver</option>
              <option value="admin">Admin</option>
            </select>
          </div>
          <div class="form-group">
            <label>Furgone Fisso (opzionale)</label>
            <select name="fixed_vehicle_id" id="edit_fixed_vehicle_id" class="form-control">
              <option value="">Nessuno (assegnazione casuale)</option>
              <% vehicles.forEach(vehicle => { %>
                <option value="<%= vehicle.id %>"><%= vehicle.targa %> - <%= vehicle.modello %></option>
              <% }); %>
            </select>
            <small class="form-text">Se selezionato, il driver ricevera sempre questo furgone</small>
          </div>
          <div class="form-group">
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
              <input type="checkbox" name="is_active" id="edit_is_active" value="1" style="width: 18px; height: 18px;">
              <span>Attivo</span>
            </label>
            <small class="form-text">Se deselezionato, il driver non potrà accedere al sistema</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Annulla</button>
          <button type="submit" class="btn btn-primary">Salva Modifiche</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const riders = <%- JSON.stringify(riders) %>;

    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('active');
      document.getElementById('sidebarOverlay').classList.toggle('active');
    }

    function openCreateModal() {
      document.getElementById('createModal').style.display = 'flex';
    }

    function closeCreateModal() {
      document.getElementById('createModal').style.display = 'none';
    }

    function openEditModal(riderId) {
      const rider = riders.find(r => r.id === riderId);
      if (!rider) return;

      document.getElementById('edit_nome').value = rider.nome;
      document.getElementById('edit_cognome').value = rider.cognome;
      document.getElementById('edit_username').value = rider.username;
      document.getElementById('edit_codice_fiscale').value = rider.codice_fiscale;
      document.getElementById('edit_role').value = rider.role;
      document.getElementById('edit_fixed_vehicle_id').value = rider.fixed_vehicle_id || '';
      document.getElementById('edit_is_active').checked = rider.is_active === 1;
      document.getElementById('editForm').action = `/admin/dipendenti/update/${riderId}`;
      
      document.getElementById('editModal').style.display = 'flex';
    }

    function closeEditModal() {
      document.getElementById('editModal').style.display = 'none';
    }

    function deleteRider(riderId) {
      const rider = riders.find(r => r.id === riderId);
      if (!rider) return;

      if (confirm(`Sei sicuro di voler eliminare ${rider.name}?`)) {
        fetch(`/admin/dipendenti/delete/${riderId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            location.reload();
          } else {
            alert('Errore durante l\'eliminazione');
          }
        })
        .catch(err => {
          console.error(err);
          alert('Errore durante l\'eliminazione');
        });
      }
    }

    // Chiudi modal cliccando fuori
    window.onclick = function(event) {
      const createModal = document.getElementById('createModal');
      const editModal = document.getElementById('editModal');
      if (event.target === createModal) {
        closeCreateModal();
      }
      if (event.target === editModal) {
        closeEditModal();
      }
    }
  </script>
</body>
</html>
