<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Assegnazione Furgoni - Admin</title>
  <link rel="stylesheet" href="/css/clean-theme.css">
</head>
<body>
  <!-- Overlay per chiudere sidebar su mobile -->
  <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

  <div class="app-container">
    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <a href="/admin/dashboard" class="sidebar-logo">Gestionale Consegne</a>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/dipendenti">Gestione Dipendenti</a></li>
        <li><a href="/admin/assignments" class="active">Assegnamenti</a></li>
        <li><a href="/admin/maintenance">Manutenzioni</a></li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
      <!-- TOPBAR -->
      <div class="topbar">
        <div class="breadcrumb">
          <button class="mobile-menu-btn" onclick="toggleSidebar()">â˜°</button>
          <span>ğŸš— Assegnamenti Furgoni</span>
        </div>
        <div class="topbar-right">
          <% if (assignments && assignments.length > 0) { %>
          <form method="POST" action="/admin/assignments/reset-all" 
                onsubmit="return confirm('âš ï¸ ATTENZIONE: Terminare TUTTI gli assegnamenti attivi?\n\nTutti i furgoni torneranno disponibili.');" 
                style="display: inline;">
            <button type="submit" class="btn btn-danger btn-sm">
              ï¿½ Termina Tutti
            </button>
          </form>
          <% } %>
          <div class="user-info">
            <span>ğŸ‘¤ <%= user.nome %> <%= user.cognome %></span>
          </div>
        </div>
      </div>

      <div class="container">
    <div class="section-header" style="display: flex; justify-content: space-between; align-items: center;">
      <h2>ğŸšš Sistema Assegnazione Furgoni</h2>
      <% if (assignments && assignments.length > 0) { %>
      <form method="POST" action="/admin/assignments/reset-all" 
            onsubmit="return confirm('âš ï¸ ATTENZIONE: Terminare TUTTI gli assegnamenti attivi?\n\nTutti i furgoni torneranno disponibili.');" 
            style="display: inline;">
        <button type="submit" class="btn btn-danger" style="background: #e74c3c;">
          ğŸ”„ Termina Tutti
        </button>
      </form>
      <% } %>
    </div>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success">âœ… <%= success[0] %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-error">âš ï¸ <%= error[0] %></div>
    <% } %>

        <!-- Form Nuova Assegnazione -->
        <div class="card">
          <div class="card-header">
            <h3>â• Nuova Assegnazione</h3>
          </div>
          <div class="card-body">
            <form method="POST" action="/admin/assignments/create">
        <div class="form-row">
          <div class="form-group">
            <label>ğŸ‘¤ Rider:</label>
            <select name="rider_id" required>
              <option value="">Seleziona rider...</option>
              <% riders.forEach(rider => { %>
                <option value="<%= rider.id %>">
                  <%= rider.nome %> <%= rider.cognome %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label>ğŸš Furgone:</label>
            <select name="vehicle_id" required>
              <option value="">Seleziona furgone...</option>
              <% vehicles.forEach(vehicle => { %>
                <option value="<%= vehicle.id %>">
                  <%= vehicle.targa %> - <%= vehicle.modello %> 
                  <% if (vehicle.status !== 'disponibile') { %>(ASSEGNATO)<% } %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label>ğŸ“… Data Assegnazione:</label>
            <input type="date" name="data_assegnazione" required>
          </div>
        </div>

        <div class="form-group">
          <label>ğŸ“ Note:</label>
          <textarea name="note" rows="2" placeholder="Note aggiuntive..."></textarea>
        </div>

              <button type="submit" class="btn btn-primary">
                âœ… Assegna Furgone
              </button>
            </form>
          </div>
        </div>

        <!-- Assegnazioni Attive -->
        <div class="card">
          <div class="card-header">
            <h3>ğŸ“‹ Assegnazioni Attive</h3>
          </div>
          <div class="card-body">

    <div class="features-grid">
      <% if (assignments && assignments.length > 0) { %>
        <% assignments.forEach(assignment => { %>
          <div class="vehicle-card">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
              <div>
                <h3 style="margin: 0; font-size: 1.5rem; color: #6366f1;">
                  <%= assignment.targa %>
                </h3>
                <p style="margin: 0.25rem 0; color: #94a3b8; font-size: 0.875rem;">
                  <%= assignment.modello %>
                </p>
              </div>
              <div class="vehicle-badge">
                ğŸšš Assegnato
              </div>
            </div>

            <div style="display: flex; flex-direction: column; gap: 0.75rem;">
              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="font-size: 1.25rem;">ğŸ‘¤</span>
                <span style="font-weight: 600;"><%= assignment.rider_name %></span>
              </div>

              <div style="display: flex; align-items: center; gap: 0.5rem;">
                <span style="font-size: 1.25rem;">ğŸ“…</span>
                <span>
                  <% 
                    const dataAssegnazione = new Date(assignment.data_assegnazione);
                    const formattedDate = dataAssegnazione.toLocaleDateString('it-IT', { 
                      day: '2-digit', 
                      month: '2-digit', 
                      year: 'numeric' 
                    });
                  %>
                  <%= formattedDate %>
                </span>
              </div>

              <% if (assignment.note) { %>
                <div style="padding: 0.75rem; background: rgba(99, 102, 241, 0.1); border-radius: 8px; margin-top: 0.5rem;">
                  <p style="margin: 0; font-size: 0.875rem; color: #cbd5e1;">
                    ğŸ’¬ <%= assignment.note %>
                  </p>
                </div>
              <% } %>

              <!-- Pulsanti azione -->
              <div style="display: flex; gap: 0.5rem; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid rgba(148, 163, 184, 0.2);">
                <form method="POST" action="/admin/assignments/end/<%= assignment.vehicle_id %>" style="flex: 1;" onsubmit="return confirm('Terminare questo assegnamento?')">
                  <button type="submit" class="btn btn-warning" style="width: 100%; font-size: 0.875rem;">
                    ğŸ”„ Termina Assegnamento
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="glass-card">
          <p style="text-align: center; color: #94a3b8; margin: 2rem 0;">
            ğŸ“­ Nessuna assegnazione attiva al momento
          </p>
        </div>
      <% } %>
    </div>

    <!-- Stats -->
    <div class="section-header" style="margin-top: 3rem;">
      <h2>ğŸ“Š Statistiche Flotta</h2>
    </div>

    <div class="features-grid" style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));">
      <div class="stat-card">
        <div class="stat-icon">ğŸš</div>
        <div class="stat-content">
          <h3><%= vehicles.length %></h3>
          <p>Furgoni Totali</p>
        </div>
      </div>

      <div class="stat-card" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.2) 100%); border-color: rgba(16, 185, 129, 0.3);">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
          âœ…
        </div>
        <div class="stat-content">
          <h3 style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            <%= vehicles.filter(v => v.status === 'disponibile').length %>
          </h3>
          <p>Disponibili</p>
        </div>
      </div>

      <div class="stat-card" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.2) 100%); border-color: rgba(245, 158, 11, 0.3);">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
          ğŸ”‘
        </div>
        <div class="stat-content">
          <h3 style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            <%= assignments.length %>
          </h3>
          <p>Assegnati</p>
        </div>
      </div>
    </div>
          </div>
        </div>
      </div>
      <script>
        function toggleSidebar() {
          const sidebar = document.getElementById('sidebar');
          const overlay = document.getElementById('sidebarOverlay');
          sidebar.classList.toggle('active');
          overlay.classList.toggle('active');
        }
      </script>
    </main>
  </div>
</body>
</html>
