<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Assegnazione Furgoni - Admin</title>
  <link rel="stylesheet" href="/css/clean-theme.css">
  <script>
    function autoAssign() {
      if(confirm('Assegnazione Automatica:\\n\\n‚Ä¢ Rider con furgone fisso ‚Üí riceveranno il loro furgone\\n‚Ä¢ Rider senza furgone fisso ‚Üí riceveranno un furgone casuale disponibile\\n\\nContinuare?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/admin/assignments/auto-assign';
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'data_assegnazione';
        input.value = new Date().toISOString().split('T')[0];
        form.appendChild(input);
        document.body.appendChild(form);
        form.submit();
      }
    }
  </script>
</head>
<body>
  <!-- Overlay per chiudere sidebar su mobile -->
  <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

  <div class="app-container">
    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <a href="/admin/dashboard" class="sidebar-logo">Gestionale Consegne</a>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/vehicles">Gestione Furgoni</a></li>
        <li><a href="/admin/dipendenti">Gestione Dipendenti</a></li>
        <li><a href="/admin/roster">Roster</a></li>
        <li><a href="/admin/assignments" class="active">Assegnamenti</a></li>
        <li>
          <a href="/admin/maintenance">
            Manutenzioni
            <% if (pendingMaintenanceCount > 0) { %>
              <span style="background: #ef4444; color: white; padding: 2px 6px; border-radius: 10px; font-size: 11px; margin-left: 8px; font-weight: 600;"><%= pendingMaintenanceCount %></span>
            <% } %>
          </a>
        </li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
      <!-- TOPBAR -->
      <div class="topbar">
        <div class="breadcrumb">
          <button class="mobile-menu-btn" onclick="toggleSidebar()">Menu</button>
          <span>Assegnamenti Furgoni</span>
        </div>
        <div class="topbar-right">
          <% if (assignments && assignments.length > 0) { %>
          <form method="POST" action="/admin/assignments/reset-all" 
                onsubmit="return confirm('ATTENZIONE: Terminare TUTTI gli assegnamenti attivi?\n\nTutti i furgoni torneranno disponibili.');" 
                style="display: inline;">
            <button type="submit" class="btn btn-danger btn-sm">
              Termina Tutti
            </button>
          </form>
          <% } %>
          <div class="user-info">
            <span><%= user.nome %> <%= user.cognome %></span>
          </div>
        </div>
      </div>

      <div class="container">
    <div class="section-header" style="display: flex; justify-content: space-between; align-items: center;">
      <h2>Sistema Assegnazione Furgoni</h2>
      <% if (assignments && assignments.length > 0) { %>
      <form method="POST" action="/admin/assignments/reset-all" 
            onsubmit="return confirm('ATTENZIONE: Terminare TUTTI gli assegnamenti attivi?\n\nTutti i furgoni torneranno disponibili.');" 
            style="display: inline;">
        <button type="submit" class="btn btn-danger" style="background: #e74c3c;">
          Termina Tutti
        </button>
      </form>
      <% } %>
    </div>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-error"><%= error[0] %></div>
    <% } %>

        <!-- Form Nuova Assegnazione -->
        <div class="card">
          <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
            <h3>Nuova Assegnazione</h3>
            <button type="button" class="btn" 
                    style="background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%); color: white; padding: 0.75rem 1.5rem; font-weight: 600;"
                    onclick="autoAssign()">
              Assegnazione Automatica
            </button>
          </div>
          <div class="card-body">
            <form method="POST" action="/admin/assignments/create">
        <div class="form-row">
          <div class="form-group">
            <label>Rider:</label>
            <select name="rider_id" required>
              <option value="">Seleziona rider...</option>
              <% riders.forEach(rider => { %>
                <option value="<%= rider.id %>">
                  <%= rider.nome %> <%= rider.cognome %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label>Furgone:</label>
            <select name="vehicle_id" required>
              <option value="">Seleziona furgone...</option>
              <% vehicles.forEach(vehicle => { %>
                <option value="<%= vehicle.id %>">
                  <%= vehicle.targa %> - <%= vehicle.modello %> 
                  <% if (vehicle.status !== 'disponibile') { %>(ASSEGNATO)<% } %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label>Data Assegnazione:</label>
            <input type="date" name="data_assegnazione" required>
          </div>
        </div>

        <div class="form-group">
          <label>Note:</label>
          <textarea name="note" rows="2" placeholder="Note aggiuntive..."></textarea>
        </div>

              <button type="submit" class="btn btn-primary">
                Assegna Furgone
              </button>
            </form>
          </div>
        </div>

        <!-- Assegnazioni Attive -->
        <div class="card">
          <div class="card-header">
            <h3>Assegnazioni Attive</h3>
          </div>
          <div class="card-body">
            <% if (assignments && assignments.length > 0) { %>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Targa</th>
                      <th>Modello</th>
                      <th>Rider</th>
                      <th>Data Assegnazione</th>
                      <th>Note</th>
                      <th>Azioni</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% assignments.forEach(assignment => { %>
                      <tr>
                        <td><strong><%= assignment.targa %></strong></td>
                        <td><%= assignment.modello %></td>
                        <td><%= assignment.rider_name %></td>
                        <td>
                          <% 
                            const dataAssegnazione = new Date(assignment.data_assegnazione);
                            const formattedDate = dataAssegnazione.toLocaleDateString('it-IT', { 
                              day: '2-digit', 
                              month: '2-digit', 
                              year: 'numeric' 
                            });
                          %>
                          <%= formattedDate %>
                        </td>
                        <td><%= assignment.note || '-' %></td>
                        <td>
                          <form method="POST" action="/admin/assignments/end/<%= assignment.vehicle_id %>" style="display: inline;" onsubmit="return confirm('Terminare questo assegnamento?')">
                            <button type="submit" class="btn btn-sm btn-warning">Termina</button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="empty-state">
                <p>Nessuna assegnazione attiva al momento</p>
              </div>
            <% } %>
    </div>

    <!-- Stats -->
    <div class="section-header" style="margin-top: 3rem;">
      <h2>üìä Statistiche Flotta</h2>
    </div>

    <div class="features-grid" style="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));">
      <div class="stat-card">
        <div class="stat-icon">üöê</div>
        <div class="stat-content">
          <h3><%= vehicles.length %></h3>
          <p>Furgoni Totali</p>
        </div>
      </div>

      <div class="stat-card" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.2) 100%); border-color: rgba(16, 185, 129, 0.3);">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
          ‚úÖ
        </div>
        <div class="stat-content">
          <h3 style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            <%= vehicles.filter(v => v.status === 'disponibile').length %>
          </h3>
          <p>Disponibili</p>
        </div>
      </div>

      <div class="stat-card" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.2) 100%); border-color: rgba(245, 158, 11, 0.3);">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
          üîë
        </div>
        <div class="stat-content">
          <h3 style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            <%= assignments.length %>
          </h3>
          <p>Assegnati</p>
        </div>
      </div>
    </div>
          </div>
        </div>
      </div>
      <script>
        function toggleSidebar() {
          const sidebar = document.getElementById('sidebar');
          const overlay = document.getElementById('sidebarOverlay');
          sidebar.classList.toggle('active');
          overlay.classList.toggle('active');
        }
      </script>
    </main>
  </div>
</body>
</html>
