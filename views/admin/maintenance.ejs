<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manutenzioni - Admin</title>
  <link rel="stylesheet" href="/css/clean-theme.css">
</head>
<body>
  <!-- Overlay per chiudere sidebar su mobile -->
  <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

  <div class="app-container">
    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <a href="/admin/dashboard" class="sidebar-logo">Gestionale Consegne</a>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/vehicles">Gestione Furgoni</a></li>
        <li><a href="/admin/dipendenti">Gestione Driver</a></li>
        <li><a href="/admin/roster">Roster</a></li>
        <li><a href="/admin/assignments">Assegnamenti</a></li>
        <li>
          <a href="/admin/maintenance" class="active">
            Manutenzioni
            <% if (pendingMaintenanceCount > 0) { %>
              <span style="background: #ef4444; color: white; padding: 2px 6px; border-radius: 10px; font-size: 11px; margin-left: 8px; font-weight: 600;"><%= pendingMaintenanceCount %></span>
            <% } %>
          </a>
        </li>
        <li><a href="/auth/logout">Logout</a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
      <!-- TOPBAR -->
      <div class="topbar">
        <div class="breadcrumb">
          <button class="mobile-menu-btn" onclick="toggleSidebar()">‚ò∞</button>
          <span>Gestione Manutenzioni</span>
        </div>
        <div class="topbar-right">
          <div class="user-info">
            <span><%= user.nome %> <%= user.cognome %></span>
          </div>
          <a href="/auth/logout" class="btn btn-secondary">Logout</a>
        </div>
      </div>

      <div class="container">
    <div class="section-header">
      <h2>Sistema Gestione Manutenzioni</h2>
    </div>

    <% if (success && success.length > 0) { %>
      <div class="alert alert-success"><%= success[0] %></div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="alert alert-error"><%= error[0] %></div>
    <% } %>

    <!-- Stats -->
    <div class="features-grid" style="grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); margin-bottom: 2rem;">
      <div class="stat-card" style="background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(249, 115, 22, 0.2) 100%); border-color: rgba(245, 158, 11, 0.3);">
        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%);">
          <%= requests.filter(r => r.status === 'pending').length %>
        </div>
        <div class="stat-content">
          <h3 style="color: #f59e0b;">In Attesa</h3>
          <p>Richieste da prendere in carico</p>
        </div>
      </div>

      <div class="stat-card" style="background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.2) 100%); border-color: rgba(59, 130, 246, 0.3);">
        <div class="stat-icon" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
          <%= requests.filter(r => r.status === 'in_riparazione').length %>
        </div>
        <div class="stat-content">
          <h3 style="color: #3b82f6;">In Riparazione</h3>
          <p>Attualmente in corso</p>
        </div>
      </div>

      <div class="stat-card" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.2) 100%); border-color: rgba(16, 185, 129, 0.3);">
        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
          <%= requests.filter(r => r.status === 'resolved').length %>
        </div>
        <div class="stat-content">
          <h3 style="color: #10b981;">Risolte</h3>
          <p>Completate con successo</p>
        </div>
      </div>
    </div>

    <!-- Lista Richieste -->
    <div class="card">
      <div class="card-header">
        <h3>Richieste di Manutenzione</h3>
      </div>
      <div class="card-body">
        <% if (requests && requests.length > 0) { %>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Furgone</th>
                  <th>Segnalato da</th>
                  <th>Problema</th>
                  <th>Priorit√†</th>
                  <th>Stato</th>
                  <th>Data</th>
                  <th>Azioni</th>
                </tr>
              </thead>
              <tbody>
                <% requests.forEach(request => { %>
                  <tr>
                    <td><strong><%= request.targa %></strong><br><small><%= request.modello %></small></td>
                    <td><%= request.reporter_name %></td>
                    <td><%= request.issue_description %></td>
                    <td>
                      <% if (request.priority === 'alta') { %>
                        <span class="badge badge-danger">Alta</span>
                      <% } else if (request.priority === 'media') { %>
                        <span class="badge" style="background:#f59e0b;">Media</span>
                      <% } else { %>
                        <span class="badge badge-success">Bassa</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (request.status === 'pending') { %>
                        <span class="badge" style="background:#f59e0b;">In Attesa</span>
                      <% } else if (request.status === 'in_riparazione') { %>
                        <span class="badge badge-primary">In Riparazione</span>
                      <% } else { %>
                        <span class="badge badge-success">Risolto</span>
                      <% } %>
                    </td>
                    <td><small><%= new Date(request.created_at).toLocaleDateString('it-IT') %></small></td>
                    <td>
                      <% if (request.status === 'pending') { %>
                        <form action="/admin/maintenance/change-status/<%= request.id %>" method="POST" style="display: inline;">
                          <input type="hidden" name="new_status" value="in_riparazione">
                          <button type="submit" class="btn btn-sm btn-primary">Prendi in Carico</button>
                        </form>
                        <button onclick="resolveRequest(<%= request.id %>)" class="btn btn-sm btn-success">Risolvi</button>
                      <% } else if (request.status === 'in_riparazione') { %>
                        <button onclick="resolveRequest(<%= request.id %>)" class="btn btn-sm btn-success">Segna Risolto</button>
                        <form action="/admin/maintenance/change-status/<%= request.id %>" method="POST" style="display: inline;">
                          <input type="hidden" name="new_status" value="pending">
                          <button type="submit" class="btn btn-sm btn-secondary">Rimetti in Attesa</button>
                        </form>
                      <% } else { %>
                        <span class="badge badge-success">Completato</span>
                      <% } %>
                    </td>
                  </tr>
                  <% if (request.status === 'resolved' && request.resolution_notes) { %>
                    <tr>
                      <td colspan="7" style="background:#f8fafc;padding:1rem;">
                        <strong>Risoluzione:</strong> <%= request.resolution_notes %>
                        <br><small>Risolto il <%= new Date(request.resolved_at).toLocaleString('it-IT') %></small>
                      </td>
                    </tr>
                  <% } %>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="empty-state">
            <p>Nessuna richiesta di manutenzione! Tutti i furgoni funzionano perfettamente.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Modal Risoluzione -->
  <div id="resolveModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 9999; align-items: center; justify-content: center;">
    <div class="glass-card" style="max-width: 500px; margin: 2rem;">
      <h3>‚úÖ Risolvi Richiesta Manutenzione</h3>
      <form id="resolveForm" method="POST">
        <div class="form-group">
          <label>üìù Note di Risoluzione:</label>
          <textarea name="resolution_notes" rows="4" placeholder="Descrivi l'intervento effettuato (opzionale)..."></textarea>
        </div>
        <div style="display: flex; gap: 1rem;">
          <button type="submit" class="btn-gradient" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
            ‚úÖ Conferma Risoluzione
          </button>
          <button type="button" onclick="closeResolveModal()" class="btn btn-secondary">
            ‚ùå Annulla
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    function resolveRequest(id) {
      document.getElementById('resolveForm').action = `/admin/maintenance/resolve/${id}`;
      document.getElementById('resolveModal').style.display = 'flex';
    }

    function closeResolveModal() {
      document.getElementById('resolveModal').style.display = 'none';
    }

    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebarOverlay');
      sidebar.classList.toggle('active');
      overlay.classList.toggle('active');
    }
  </script>
    </main>
  </div>
</body>
</html>
